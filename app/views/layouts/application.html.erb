<!DOCTYPE html>
<html>
  <head>
    <title>CampCentral</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <% if current_user %>
    <script>
        window.current_user = {
            "id": <%= current_user.id %>,
            "email": "<%= current_user.email %>"
        }
    </script>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
